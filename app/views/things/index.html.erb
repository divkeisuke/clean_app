<h1><%= @place.name %>のモノ一覧</h1>

<div class="container">
  <table class="table">
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.name,place_thing_path(@place,thing),class: "btn btn-outline-primary" %></td>
        <td><%= link_to '編集', edit_place_thing_path(@place,thing),class: "btn btn-outline-dark" %></td>
        <td><%= link_to '削除', place_thing_path(@place,thing), method: :delete, data: { confirm: '本当に削除しますか?' },class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </table>
</div>  
<br>

<%= link_to new_place_thing_path(@place),class: "btn btn-outline-success" do %>
  <%= @place.name %>に新しくモノを登録する
<% end %>
